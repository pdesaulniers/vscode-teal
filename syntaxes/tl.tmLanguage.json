{
	"information_for_contributors": [
		"Based on VSCode's Lua syntax"
	],
	"name": "TL",
	"scopeName": "source.tl",
	"patterns": [
		{
			"begin": "\\b(?:(local)\\s+)?(function)\\s*(?:\\s+([a-zA-Z_][a-zA-Z0-9_]*(?:([\\.:])[a-zA-Z_][a-zA-Z0-9_]*)?)\\s*)?(\\()",
			"beginCaptures": {
				"1": {
					"name": "storage.modifier.local.tl"
				},
				"2": {
					"name": "keyword.control.tl"
				},
				"3": {
					"name": "entity.name.function.tl"
				},
				"4": {
					"name": "punctuation.separator.parameter.tl"
				},
				"5": {
					"name": "punctuation.definition.parameters.begin.tl"
				}
			},
			"end": "\\)",
			"endCaptures": {
				"0": {
					"name": "punctuation.definition.parameters.end.tl"
				}
			},
			"name": "meta.function.tl",
			"patterns": [
				{
					"comment": "First function argument",
					"begin": "(?<=[\\(])",
					"end": "([a-zA-Z]+)",
					"endCaptures": {
						"0": {
							"name": "variable.parameter.function.tl"
						}
					}
				},
				{
					"comment": "Nth function argument",
					"begin": ",",
					"end": "([a-zA-Z]+)",
					"endCaptures": {
						"0": {
							"name": "variable.parameter.function.tl"
						}
					}
				},
				{
					"comment": "Colon followed by type",
					"begin": ":",
					"end": "([a-zA-Z]+)",
					"endCaptures": {
						"0": {
							"name": "support.type.tl"
						}
					}
				}
			]
		}
	],
	"repository": {

	}
}